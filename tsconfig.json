{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@playwright/test"],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["src", "tests", "playwright.config.ts"]
}